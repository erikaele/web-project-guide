---
permalink: /tags/
layout: layouts/home.njk
---
<h1>Tags</h1>

<ul class="post-tags list-reset">
{% for tag in collections.tagList %}
  {% set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
  <li class="post-tags__item">
    <a href="{{ tagUrl | url }}" class="post-tag icon-tag">{{ tag }}</a>
  </li>
{% endfor %}
</ul>
